<Window xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="clientavalonia.Gui.LoginView"
             Title="Login" Width="400" Height="300">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Username:"/>
        <TextBox Name="Username" Width="200"/>
        <TextBlock Text="Password:"/>
        <TextBox Name="Password" Width="200"/>
        <Button Content="Login" Click="OnLoginClick" Width="100"/>
        <TextBlock Name="ErrorLabel" Foreground="Red" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>